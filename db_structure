class Character(models.Model):
    MALE = 'M'
    FEMALE = 'F'
    GENDERS = [
        (MALE, 'Man'),
        (FEMALE, 'Woman')
    ]

    first_name = models.CharField(max_length=100)
    last_name = models.CharField(max_length=100, default='')
    gender = models.CharField(max_length=1, choices=GENDERS, default=MALE)
